    <script>
        const appSocket = io('http://localhost:5000')
        // import io from '/socket.io'
        var chat = document.getElementById('chat');
        chat.scrollTop = chat.scrollHeight - chat.clientHeight;
        const btn = document.querySelector('#submit')
        const text = document.querySelector('#inputText')
        const chart = document.querySelector('#chart')
        btn.addEventListener('click', (e) => {
            chart.innerHTML += ('<p>' + text.value + '</p>')
            appSocket.emit('message', text.value)
            chart.value = ''
        })
        appSocket.on('message', (value) => {
            console.log({ value });
            chart.innerHTML += '<p>' + value + '</p>'
        })

        appSocket.on('connection')
    </script>
